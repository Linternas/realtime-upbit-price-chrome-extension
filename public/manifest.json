{
  "manifest_version": 3,
  "name": "RT Upbit price",
  "version": "0.0.1",
  "description": "real-time upbit coin price",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.upbit.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      }
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
